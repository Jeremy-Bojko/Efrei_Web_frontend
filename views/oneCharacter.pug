extends layout

block content
	.container-fluid
		nav.navbar.navbar-default
			.container-fluid
				.navbar-header
						h2 Information page of character #{character.name}
	.container-fluid
		form.form-horizontal(action='')
			.form-group
			label.col-sm-3.control-label 
				h3 Name : #{character.name}
				h3 Class : #{character.class}
				h3 User Name : #{user.name}

		script(src='http://cdn.leafletjs.com/leaflet-0.7.2/leaflet.js')
		script(src='http://code.jquery.com/jquery-2.1.0.min.js')
		link(rel='stylesheet', href='http://cdn.leafletjs.com/leaflet-0.7.2/leaflet.css')
		script.
			$(document).ready(function(){
				var character1 = [!{character.position.x},!{character.position.y}]; 
				var map = L.map("map").setView(character1, 17);
				L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors'}).addTo(map);
				L.marker(character1).addTo(map).bindPopup("Position")
			})
		#map(style='height: 500px;')